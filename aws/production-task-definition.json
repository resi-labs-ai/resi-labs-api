{
    "family": "subnet46-s3-api-task",
    "networkMode": "awsvpc",
    "requiresCompatibilities": ["FARGATE"],
    "cpu": "512",
    "memory": "1024",
    "executionRoleArn": "arn:aws:iam::532533045818:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::532533045818:role/ecsTaskRole",
    "containerDefinitions": [
        {
            "name": "api",
            "image": "532533045818.dkr.ecr.us-east-2.amazonaws.com/subnet46-s3-api:latest",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "environment": [
                {"name": "PORT", "value": "8000"},
                {"name": "S3_BUCKET", "value": "4000-resilabs-prod-bittensor-sn46-datacollection"},
                {"name": "S3_REGION", "value": "us-east-2"},
                {"name": "NET_UID", "value": "46"},
                {"name": "BT_NETWORK", "value": "finney"},
                {"name": "SOURCE", "value": "4"},
                {"name": "DAILY_LIMIT_PER_MINER", "value": "100"},
                {"name": "DAILY_LIMIT_PER_VALIDATOR", "value": "10000"},
                {"name": "TOTAL_DAILY_LIMIT", "value": "200000"},
                {"name": "ENABLE_RATE_LIMITING", "value": "true"},
                {"name": "RATE_LIMIT_PER_MINUTE", "value": "60"},
                {"name": "LOG_LEVEL", "value": "INFO"},
                {"name": "ENVIRONMENT", "value": "production"},
                {"name": "API_VERSION", "value": "1.0.0"}
            ],
            "secrets": [
                {
                    "name": "AWS_ACCESS_KEY_ID",
                    "valueFrom": "arn:aws:secretsmanager:us-east-2:532533045818:secret:subnet46/aws-credentials:AWS_ACCESS_KEY_ID::"
                },
                {
                    "name": "AWS_SECRET_ACCESS_KEY",
                    "valueFrom": "arn:aws:secretsmanager:us-east-2:532533045818:secret:subnet46/aws-credentials:AWS_SECRET_ACCESS_KEY::"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/subnet46-s3-api",
                    "awslogs-region": "us-east-2",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8000/healthcheck || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        }
    ]
}
